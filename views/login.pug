extends layout

block content
    title Login Page
    .bgimg.w3-display-container.w3-center
        #about.w3-row.w3-padding.w3-margin.w3-container.w3-card-4.w3-light-grey.w3-display-middle(style=' width: 80%;')
            .w3-col.m5.w3-padding-large.w3-hide-small.w3-display-container.bgimg2(style='height:400px')
                a.signup-image-link.w3-display-bottommiddle(href='/register') 註冊新帳號
            form#register_form.w3-col.m7.w3-container.w3-text-blue(role='form', data-toggle='validator' ,method='POST', action="/login")
                h2.w3-center.w3-padding-32 登入
                .w3-row.w3-padding
                    .w3-col(style='width:50px')
                        i.w3-xxlarge.fa.fa-user
                    .form-group.w3-rest
                        input#username.w3-input.w3-border.form-margin(type='text', name='username', placeholder='帳號', required='required', pattern='^[a-zA-Z0-9]{1,}$', data-pattern-error='使用字元錯誤', data-error='請輸入帳號')
                        .help-block.with-errors.messages
                .w3-row.w3-padding
                    .w3-col(style='width:50px')
                        i.w3-xxlarge.fa.fa-key
                    .form-group.w3-rest
                        input#password.w3-input.w3-border(type='password', name='password', placeholder='密碼', required='required', data-error='請輸入密碼')
                        .help-block.with-errors.messages
                .w3-row.w3-padding
                    .form-group.w3-rest
                        input#remember-me.agree-term(type='checkbox', name='remember-me')
                        label.label-agree-term(for='agree-term')
                            span
                                span
                            | 記住我
                .w3-row.w3-padding
                    .form-group.form-button.w3-rest
                        input#signup.btn.btn-primary.w3-button.w3-block.w3-section.w3-blue.w3-ripple.w3-padding(type='submit', name='signin', value='登入')
                        .help-block.with-errors.messages

                            // 引用 Validator
    script(src='https://code.jquery.com/jquery-3.3.1.js', integrity='sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js')
    // 執行 Validator
    //script.
        $('#register_form').validator().on('submit', function (e) {
            if (e.isDefaultPrevented()) { // 未驗證通過 則不處理
                return;
            } else { // 通过后，送出表单
                alert("成功登入");
            }
            e.preventDefault(); // 防止原始 form 提交表单
        });