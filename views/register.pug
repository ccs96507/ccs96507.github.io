extends layout

block content
    title Register Page
    .bgimg.w3-display-container.w3-center
        #about.w3-row.w3-padding.w3-margin.w3-container.w3-card-4.w3-light-grey.w3-display-middle(style=' width: 80%;')
            form#register_form.w3-col.m7.w3-container.w3-text-blue(role='form', data-toggle='validator', method="POST", action="/register")
                h2.w3-center 註冊
                .w3-row.w3-padding
                    .w3-col(style='width:50px')
                        i.w3-xxlarge.fa.fa-user
                    .form-group.w3-rest
                        input#username.w3-input.w3-border.form-margin(type='text', name='username', placeholder='帳號', required='required')
                        .help-block.with-errors.messages
                .w3-row.w3-padding
                    .w3-col(style='width:50px')
                        i.w3-xxlarge.fa.fa-envelope-o
                    .form-group.w3-rest
                        input#email.w3-input.w3-border(type='email', name='email', placeholder='信箱', data-error='郵件格式錯誤', required='required')
                        .help-block.with-errors.messages
                .w3-row.w3-padding
                    .w3-col(style='width:50px')
                        i.w3-xxlarge.fa.fa-key
                    .form-group.w3-rest
                        input#password.w3-input.w3-border(type='password', name='password', placeholder='密碼', pattern='^(?=.*\\d)(?=.*[a-zA-Z]).{6,}$', data-error='請輸入含有英文字母及數字的密碼，至少六個字元。', required='required')
                        .help-block.with-errors.messages
                .w3-row.w3-padding
                    .w3-col(style='width:50px')
                        i.w3-xxlarge.fa.fa-lock
                    .form-group.w3-rest
                        input#re_pass.w3-input.w3-border(type='password', name='re_pass', placeholder='重複密碼', data-match='#password', data-error='密碼未吻合！', required='required')
                        .help-block.with-errors.messages
                .w3-row
                    .form-group.w3-rest
                        input#agree-term.agree-term(type='checkbox', name='agree-term', required='required')
                        label.label-agree-term(for='agree-term')
                            span
                                span
                            | 我同意
                            a.term-service.w3-text-black(href='#') 使用者規約
                .w3-row.w3-padding
                    .form-group.form-button.w3-rest
                        input#signup.btn.btn-primary.w3-button.w3-block.w3-section.w3-blue.w3-ripple.w3-padding(type='submit', name='signup', value='註冊')
                        .help-block.with-errors.messages
            .w3-col.m5.w3-padding-large.w3-hide-small.w3-display-container.bgimg2(style='height:480px')
                a.signup-image-link.w3-display-bottommiddle(href='/login') 我已經註冊了

    script(src='https://code.jquery.com/jquery-3.3.1.js', integrity='sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js')

